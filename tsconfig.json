{
  "compilerOptions": {
    "target": "ES2020", // Or a later version
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "dom"] // Add "dom" here
  },
  "include": ["src/**/*"]
}